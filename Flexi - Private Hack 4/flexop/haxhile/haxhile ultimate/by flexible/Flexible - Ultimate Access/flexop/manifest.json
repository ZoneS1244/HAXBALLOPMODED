{
	"manifest_version": 2,
	"name": "flexi. - Private Hack 4",
	"version": "4.0",
	"description": "OpMode v2 Edited by Flexible. // Daha fazla güncel hileler için discord: flexible06",
	"icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [{
		"matches": ["*://*.haxball.com/*", "*://haxball.com/*"],
		"css": ["website/styles.css"],
		"js": ["website/scripts.js"],
		"all_frames": true
	}],
	"web_accessible_resources": ["website/game/game.js"],
	"permissions": [
       "webRequest",
       "webRequestBlocking",
       "*://*.haxball.com/*", "*://haxball.com/*"
	]
}